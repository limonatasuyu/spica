{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "args": [
          "--database-name=spica",
          "--database-uri=mongodb://localhost:27017",
          "--passport-secret=secret",
          "--public-url=http://localhost",
          "--port=4300"
        ]
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "apps/api/dist",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.json",
        "assets": [
          {
            "input": "apps/api/src/bucket/expression/src",
            "glob": "*.pegjs",
            "output": "src/bucket/expression/src"
          }
        ],
        "transformers": [{"name": "typescript-transform-paths/nx-transformer"}]
      },
      "dependsOn": ["^build"]
    },
    "build-worker": {
      "executor": "@nx/webpack:webpack",
      "options": {
        "outputPath": "apps/api/dist/src/function/runtime/node/entrypoint",
        "main": "apps/api/src/function/runtime/node/entrypoint.js",
        "webpackConfig": "apps/api/webpack.config.js"
      }
    },
    "build-rol": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "outputPath": "apps/api/dist/src/function/runtime/node/entrypoint",
        "main": "apps/api/src/function/runtime/node/entrypoint.js",
        "tsConfig": "apps/api/tsconfig.json",
        "rollupConfig": "apps/api/src/function/runtime/node/rollup.config.cjs"
      }
    }
  }
}
