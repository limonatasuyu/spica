{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "types": ["node"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": false,
    "paths": {
      "@spica-server/*": ["./src/*"]
    }
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts", "**/testing.module.ts"],
  "include": ["**/*.ts", "../../libs/core/helpers/src/**/*.ts"],
  "references": [
    {"path": "../../libs/core/helpers/tsconfig.lib.json"},
    {"path": "../../libs/interface/tsconfig.lib.json"}
  ]
}
