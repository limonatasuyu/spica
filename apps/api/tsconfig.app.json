{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "types": ["node"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": false
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts", "**/testing.module.ts"],
  "include": [
    "**/*.ts",
    "**/*.json",
    "../../libs/core/helpers/src/**/*.ts",
    "../../libs/core/schema/src/**/*.ts",
    "../../libs/core/websocket/src/**/*.ts"
  ],
  "references": [
    {"path": "../../libs/database/core/tsconfig.lib.json"},
    {"path": "../../libs/core/schema/tsconfig.lib.json"},
    {"path": "../../libs/core/helpers/tsconfig.lib.json"},
    {"path": "../../libs/interface/tsconfig.lib.json"}
  ]
}
