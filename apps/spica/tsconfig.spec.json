{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2018", "dom"],
    "types": ["jasmine"],
    "paths": {
      "@spica-client/*": ["./packages/*", "./src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["test.ts", "src/polyfills.ts"],
  "include": ["packages/**/*.spec.ts", "src/**/*.spec.ts"]
}
